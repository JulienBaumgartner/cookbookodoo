<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="hostel_room_view_form" model="ir.ui.view">
        <field name="name">Hostel Room Form</field>
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- <button name="make_available" string="Make Available" type="object"
                        class="btn-primary" />
                    <button name="make_closed" string="Make Closed" type="object"
                        class="btn-default" /> -->
                    <button type="action" name="%(my_hostel.action_hostel_categ)d"
                        string="Open Hotel Category" />
                    <!-- <field name="state" widget="statusbar" /> -->
                    <field name="stage_id" widget="statusbar"
                        options="{'clickable': '1', 'fold_field': 'fold'}" />
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                            name="action_open_related_students">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_value">
                                    <field name="related_students" />
                                </span>
                                <span class="o_stat_text">Hostel Students</span>
                            </div>
                        </button>
                    </div>
                    <group string="Content" name="my_content">
                        <!-- <widget name="web_ribbon" title="Archived" bg_color="bg-danger" /> -->
                        <group>
                            <field name="room_name" />
                            <field name="room_number" />
                            <field name="room_floor" />
                            <field name="hostel_id" />
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="currency_id" required="1" placeholder="Currency" />
                            <field name="rent_amount" required="1" placeholder="Rent Amount"
                                invisible="not currency_id" />
                        </group>
                        <group>
                            <field name="popularity" widget="priority" />
                            <field name="hostel_amenities_ids" widget="many2many_tags"
                                options="{'color_field': 'color', 'no_create_edit': True}" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Other Information" name="other_information">
                            <field name="other_info" widget="html" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Inherit Form View -->
    <record id="hostel_room_view_form_inherit" model="ir.ui.view">
        <field name="name">Hostel Room Form Inherit</field>
        <field name="model">hostel.room</field>
        <field name="inherit_id" ref="my_hostel.hostel_room_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='my_content']/group" position="inside">
                <field name="student_per_room" />
            </xpath>
            <xpath expr="//group[@name='my_content']/group" position="after">
                <group>
                    <field name="description" />
                    <field name="room_rating" />
                    <field name="category_id" />

                </group>
            </xpath>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="hostel_room_view_tree" model="ir.ui.view">
        <field name="name">Hostel Room List</field>
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <tree>
                <!-- <tree editable="bottom"> -->
                <field name="room_name" />
                <field name="room_number" />
                <!-- <field name="state" optional="show" /> -->
                <field name="stage_id" />
                <field name="sequence" widget="handle" />
            </tree>
        </field>
    </record>

    <!-- Inherit Tree(list) View -->
    <record id="hostel_room_view_tree_inherit" model="ir.ui.view">
        <field name="name">Hostel Room List Inherit</field>
        <field name="model">hostel.room</field>
        <field name="inherit_id" ref="my_hostel.hostel_room_view_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='room_name']" position="after">
                <field name="student_per_room" />
            </xpath>
        </field>
    </record>

    <!-- Search View-->
    <record id="hostel_room_view_search" model="ir.ui.view">
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <search>
                <field name="room_name" />
                <field name="room_number" />
                <field name="hostel_id" />

            </search>
        </field>
    </record>

    <!-- Inherit Search view-->
    <record id="hostel_room_view_search_inherit" model="ir.ui.view">
        <field name="name">Hostel Room Search inherit</field>
        <field name="model">hostel.room</field>
        <field name="inherit_id" ref="my_hostel.hostel_room_view_search" />
        <field name="arch" type="xml">
            <xpath expr="." position="inside">
                <field name="room_rating"></field>
            </xpath>
        </field>
    </record>

    <record id="action_hostel_room" model="ir.actions.act_window">
        <field name="name">Hostel Room</field>
        <field name="res_model">hostel.room</field>
        <field name="view_id" ref="hostel_room_view_tree" />
        <field name="search_view_id" ref="hostel_room_view_search" />
        <field name="view_mode">tree,form,kanban</field>
        <!-- <field name="context">{'lang': 'en_US','default_lang': 'en_US', 'active_test': False,
            'default_room_rating': 1.0}</field> -->
        <!-- <field name="domain">[('state', '=', 'draft')]</field> -->
    </record>

    <record id="action_hostel_room_tree" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_hostel_room" />
        <field name="view_id" ref="hostel_room_view_tree" />
        <field name="view_mode">tree</field>
        <field name="sequence" eval="1" />
    </record>

    <record id="action_hostel_room_form" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_hostel_room" />
        <field name="view_id" ref="hostel_room_view_form" />
        <field name="view_mode">form</field>
        <field name="sequence" eval="2" />
    </record>

    <!-- Minimal Form View for kanban -->
    <record id="hostel_room_view_form_minimal" model="ir.ui.view">
        <field name="name">Hostel room Form Min</field>
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="room_name" />
                    <field name="room_number" />
                    <field name="hostel_id" required="1" />
                    <field name="room_floor" />
                    <field name="student_per_room" />
                </group>
            </form>
        </field>
    </record>


    <!-- Kanban View -->
    <record id="hostel_room_view_kanban" model="ir.ui.view">
        <field name="name">Hostel room Kanban</field>
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" on_create="quick_create"
                quick_create_view="my_hostel.hostel_room_view_form_minimal">
                <field name="stage_id" />
                <field name="color" />
                <field name="activity_state" />
                <!-- <progressbar field="popularity"
                    colors='{"low": "success", "medium": "warning", "high":"danger"}' /> -->
                <progressbar field="activity_state"
                    colors='{"planned": "success",
                             "today": "warning",
                             "overdue": "danger"}' />
                <templates>
                    <t t-name="kanban-menu" groups="base.group_user">
                        <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">
                            Edit</a>
                        <a t-if="widget.deletable" role="menuitem" type="delete"
                            class="dropdown-item">Delete</a>
                        <div role="separator" class="dropdown-divider"></div>
                        <ul class="oe_kanban_colorpicker" data-field="color" />
                    </t>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="{{'oe_kanban_color_' + kanban_getcolor(record.color.raw_value) }} oe_kanban_card oe_kanban_global_click oe_semantic_html_override">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <strong class="o_kanban_record_title">
                                    <field name="room_name" />
                                </strong>
                                <div class="text-muted">
                                    <i class="fa fa-building"> </i>
                                    <field name="hostel_id" />
                                </div>
                                <span class="oe_kanban_list_many2many">
                                    <field name="hostel_amenities_ids" widget="many2many_tags"
                                        options="{'color_field': 'color'}" />
                                </span>
                                <div>
                                    <field name="popularity" widget="priority" />
                                </div>
                                <div>
                                    <field name="activity_ids" widget="kanban_activity" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <menuitem id="menu_all_hostel_room" parent="hostel_main_menu" action="action_hostel_room"
        sequence="20" groups="" />

</odoo>