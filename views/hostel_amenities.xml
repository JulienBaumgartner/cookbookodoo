<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_hostel_amenities" model="ir.actions.act_window">
        <field name="name">Hostel Amenities</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hostel.amenities</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Hostel Amenities.
            </p>
        </field>
    </record>

    <menuitem id="hostel_amenities_type_menu" name="Amenities" parent="hostel_main_menu"
        action="my_hostel.action_hostel_amenities" groups="my_hostel.group_hostel_manager" sequence="40" />

    <!-- Form view -->
    <record id="view_hostel_amenities_form_view" model="ir.ui.view">
        <field name="name">hostel.amenities.form.view</field>
        <field name="model">hostel.amenities</field>
        <field name="arch" type="xml">
            <form string="Hostel">
                <sheet>
                    <div class="oe_title">
                        <h3>
                            <table>
                                <tr>
                                    <td style="padding-right:10px;">
                                        <field name="name"
                                            placeholder="Amenities Name" />
                                    </td>
                                </tr>
                            </table>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="active" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_hostel_amenities_tree_view" model="ir.ui.view">
        <field name="name">hostel.amenities.tree.view</field>
        <field name="model">hostel.amenities</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <!-- Search -->
    <record id="view_hostel_amenities_search_view" model="ir.ui.view">
        <field name="name">Hostel Amenities Search</field>
        <field name="model">hostel.amenities</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="active" />
            </search>
        </field>
    </record>
</odoo>